{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üçé Open Example in Xcode",
            "command": "open Martie.xcodeproj",
            "cwd": "${workspaceFolder}/Example"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üì± Build & Run Example (iOS Simulator)",
            "command": "xcodebuild -project Martie.xcodeproj -scheme OpenIapExample -destination 'platform=iOS Simulator,name=iPhone 16,OS=18.5' build",
            "cwd": "${workspaceFolder}/Example"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üì¶ Swift Package Build",
            "command": "swift build",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch", 
            "name": "üß™ Swift Package Test",
            "command": "swift test",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "‚òï CocoaPods Build",
            "command": "pod install",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üîç CocoaPods Lint",
            "command": "pod lib lint --allow-warnings",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "üöÄ Swift Test (Watch Mode)",
            "command": "swift test --parallel",
            "cwd": "${workspaceFolder}"
        }
    ]
}